<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="movie"
                type="com.example.movies.model.Movie"/>

        <variable
                name="listener"
                type="com.example.movies.view.MovieClickListener"/>
    </data>



    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:onClick="@{listener::onMovieClicked}"
            >

        <TextView
                android:id="@+id/movieId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@{String.valueOf(movie.uuid)}"
                />

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:imageUrl="@{movie.imagePath}"
                android:padding="4dp"

                />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Title"
                    android:text="@{movie.movieName}"
                    />

            <TextView
                    android:id="@+id/raiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text"
                    android:text="@{movie.voteAverage}"
                    />

        </LinearLayout>
    </LinearLayout>

</layout>