<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="movie"
                type="com.example.movies.model.Movie"/>
        
        <variable
                name="palette"
                type="com.example.movies.model.MoviePalette"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.DetailFragment"
            android:background="@{palette.color}"
            >

        <ImageView
                android:id="@+id/movieImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:imageUrl="@{movie.imagePath}"
                android:scaleType="fitCenter"
                android:minHeight="200dp"
                />

        <TextView
                android:id="@+id/movieName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieImage"
                android:text="@{movie.movieName}"
                style="@style/Title"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                />

        <TextView
                android:id="@+id/movieVoteAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieName"
                android:text="@{movie.voteAverage}"
                style="@style/Text"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                />

        <TextView
                android:id="@+id/movieLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieVoteAverage"
                android:text="@{movie.language}"
                style="@style/Text"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                />

        <TextView
                android:id="@+id/moviePopularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieLanguage"
                android:text="@{movie.popularity}"
                style="@style/Text"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                />


    </RelativeLayout>

</layout>